{
  "name": "project-manager",
  "version": "1.0.0",
  "description": "プロジェクト管理ツール（Electronアプリ）",
  "license": "MIT",
  "author": "Entangle",
  "main": "electron-main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --mode=development",
    "start": "electron-forge start -- --mode=development",
    "start:client": "webpack-dev-server --mode=development",
    "start:server": "node ./dist/controllers/api-server.js",
    "electron": "electron . -- --mode=development",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dist": "npx electron-builder"
  },
  "build": {
    "appId": "com.entangle.projectmanager",
    "productName": "ProjectManager",
    "files": [
      "dist/**/*",
      "electron-main.js",
      "electron-package.json",
      "node_modules/**/*"
    ],
    "extraResources": [],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "build/out"
    }
  },
  "dependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/react-router-dom": "^5.3.3",
    "body-parser": "^2.2.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^5.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.7.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.1"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  }
}
